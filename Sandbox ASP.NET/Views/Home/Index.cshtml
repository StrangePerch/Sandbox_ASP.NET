@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
        <style>
                      #canvas{
                          display: block;
                          width: 70vw;
                          height: 70vh;
                      }
                      
                      body{
                          margin: 0;
                      }
                      
                      .slider {
                          height: 8px;
                          margin-top: 15px;
                      } 
        </style>
}

<div>
        <canvas id="canvas"></canvas>
        <Button onclick="SetMaterial('Sand')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Sand</Button>

        <Button onclick="SetMaterial('Water')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Water</Button>

        <Button onclick="SetMaterial('Wood')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Wood</Button>

        <Button onclick="SetMaterial('Air')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Air</Button>

        <Button onclick="SetMaterial('Steam')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Steam</Button>

        <Button onclick="SetMaterial('Fire')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Fire</Button>

        <Button onclick="SetMaterial('Smoke')"
                style="
                margin-top: 10px; 
                margin-left: 10px">Smoke</Button>

        <Button onclick="ClearWorld()"
                style="
                margin-top: 10px; 
                margin-left: 10px">Clear</Button>
        
        <Button onclick="Save()"
                style="
                margin-top: 10px; 
                margin-left: 10px">Save</Button>

        <div>
                <label style="margin-left: 15px"
                       id="SizeLabel" for="SizeSlider">Size</label>
                <input type="range"
                       min="1" max="50" value="5"
                       id="SizeSlider" class="slider">
                <label style="margin-left: 15px"
                       id="DensityLabel" for="DensitySlider">Density</label>
                <input type="range"
                       min="1" max="100" value="50"
                       id="DensitySlider" class="slider">
        </div>
        
</div>

@section Scripts{
        <script src="~/js/Code/Materials/Acid.js"></script>
        <script src="~/js/Code/Materials/Air.js"></script>
        <script src="~/js/Code/Materials/Fire.js"></script>
        <script src="~/js/Code/Materials/Sand.js"></script>
        <script src="~/js/Code/Materials/Steam.js"></script>
        <script src="~/js/Code/Materials/Smoke.js"></script>
        <script src="~/js/Code/Materials/Water.js"></script>
        <script src="~/js/Code/Materials/Wood.js"></script>
        <script src="~/js/Code/Functions/editing.js"></script>
        <script src="~/js/Code/Functions/other.js"></script>
        <script src="~/js/Code/Functions/world.js"></script>
        <script src="~/js/Code/main.js"></script>
        <script src="~/js/Code/script.js"></script>
}